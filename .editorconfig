# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Tabs in JS unless otherwise specified
[**.js]
indent_style = tab

[test/**.xml]
indent_style = tab

[test/**.php]
indent_style = tab

[test/**.html]
indent_style = tab

[test/**.css]
indent_style = tab
